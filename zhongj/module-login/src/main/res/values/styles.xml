<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditScreenTextStyle">
        <item name="android:colorControlNormal">@color/color_e6e6e6</item>
        <item name="android:colorControlActivated">@color/color_e6e6e6</item>
        <item name="android:colorControlHighlight">@color/color_e6e6e6</item>
    </style>
    <style name="tvTitle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="editNoBgStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textColorHint">@color/color_999999</item>
    </style>
    <style name="sendCodeStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_00A468</item>
        <item name="android:background">@drawable/corner_border_14</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">20sp</item>
    </style>
</resources>